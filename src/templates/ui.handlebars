{{#*inline "sceneListEntry"}}
<li data-type="scene" {{#if selected }} class="selected"{{/if}} data-id="{{_id}}" data-vtta-id="{{id}}">{{name}}</li>
{{/inline}}

<form>
 {{#*inline "scenesListPartial"}}
 <div class="list scenes">
   <ul>
   {{#each scenes }}
    {{> sceneListEntry layer=this }}
    {{/each}}
    </ul>
 </div>
 {{/inline}}


  {{#*inline "commentsListPartial" }}
  <div class="list comments">
    
  </div>
  {{/inline}}

  {{#*inline "label" }}
    <div class="label"><span class="title">
      {{title}} 
    </span><span class="value">{{value}}</span></div>
  {{/inline}}

  {{#*inline "sceneDetailsPartial" }}
